extends layout

block localcss
	link(rel='stylesheet' type='text/css' href='css/home.css')
block localscripts
	script(src='js/home.js')
block content
	.container.hero
		.flex-container
			div STUDIO
			.info
				include ../public/img/i-icon.svg
			div EST. 2017
		.title CRAFTED
		.line
		ul.set-list
			li <a class='scroll' href='#snow-hugs'>01&nbsp;&nbsp;Snow Hugs</a>
			li <a href='#retro'>02&nbsp;&nbsp;Retro</a>
			li <a href='#marshbank-park'>03&nbsp;&nbsp;Marshbank Park</a>
		.arrow
			.flex-center
				a.scroll(href='#snow-hugs')
					.arrow-down
	.container.content
		.project-padding#snow-hugs
		.project
			.preview.left.landscape
				img(src='img/SnowHugs/1.jpg')
				.heading
					.title Snow Hugs
					.info Dec. 2016
					.info 6 Photos
			.preview.right.landscape.sm.add-top
				img(src='img/SnowHugs/2-highres.jpg')#image
			.preview.right.landscape.md
				img(src='img/SnowHugs/4-highres.jpg')
			.preview.right.landscape.add-right
				img(src='img/SnowHugs/5-highres.jpg')
			.preview.left.landscape.sm.add-top
				img(src='img/SnowHugs/6-highres.jpg')
	.album
		.inner
			.top-bar
				.album-title Snow Hugs
				.close [esc] close
			.slideshow
				img.current(id='test' src='img/SnowHugs/1-highres.jpg' width='5184' height='3456')
				//- img.current(id='test' src='img/Retro/1-highres.jpg' width='3168' height='3960')

			.bottom-bar
				.controls
					#control-left
						.arrow-left
					.count 1/4
					#control-right
						.arrow-right







